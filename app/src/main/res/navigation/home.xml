<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        app:startDestination="@id/splashFragment">

    <fragment
            android:id="@+id/splashFragment"
            android:name="io.github.farhad.popcorn.ui.splash.SplashFragment"
            android:label="splashFragment">

        <action
                android:id="@+id/action_splashFragment_to_trendingMoviesFragment"
                app:destination="@id/trendingMoviesFragment"
                app:launchSingleTop="true"
                app:popUpTo="@+id/splashFragment"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/trendingMoviesFragment"
            android:name="io.github.farhad.popcorn.ui.movies.TrendingMoviesFragment"
            android:label="TrendingMoviesFragment" />
</navigation>