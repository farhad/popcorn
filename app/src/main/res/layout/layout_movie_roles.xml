<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_crew"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:layout_margin="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:srcCompat="@drawable/ic_crew"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textColor="@color/colorTextPrimary"
            android:gravity="start|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"

            app:layout_constraintLeft_toRightOf="@+id/image_crew"
            app:layout_constraintBottom_toBottomOf="@+id/image_crew"


            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"

            android:text="@string/title_crew"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_roles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/image_crew"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_marginTop="8dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>