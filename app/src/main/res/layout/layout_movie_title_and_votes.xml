<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_movie_poster"
            android:layout_width="100dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="H,2:3"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"

            android:scaleType="centerCrop"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@id/imageview_movie_poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:layout_margin="8dp"

            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorTextPrimary"
            android:gravity="start|center_vertical"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"

            tools:text="sample movie"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_releasedate"
            android:layout_width="18dp"
            android:layout_height="18dp"

            app:layout_constraintLeft_toRightOf="@+id/imageview_movie_poster"
            app:layout_constraintBottom_toTopOf="@+id/image_votecount"

            android:layout_margin="8dp"

            app:srcCompat="@drawable/ic_date"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_movie_releasedate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/image_releasedate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textview_movie_votecount"

            android:textColor="@color/colorTextSecondary"
            android:gravity="start|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:ellipsize="end"
            android:maxLines="1"

            android:layout_margin="8dp"

            tools:text="sample movie"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_votecount"
            android:layout_width="18dp"
            android:layout_height="18dp"

            app:layout_constraintLeft_toRightOf="@+id/imageview_movie_poster"
            app:layout_constraintBottom_toTopOf="@+id/image_voteaverage"

            android:layout_margin="8dp"
            android:padding="1dp"

            app:srcCompat="@drawable/ic_like"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_movie_votecount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/image_votecount"
            app:layout_constraintBottom_toTopOf="@+id/textview_movie_voteaverage"
            app:layout_constraintRight_toRightOf="parent"

            android:textColor="@color/colorTextSecondary"
            android:gravity="start|center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:ellipsize="end"
            android:maxLines="1"

            android:layout_margin="8dp"

            tools:text="sample movie"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_movie_voteaverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toRightOf="@+id/image_voteaverage"
            app:layout_constraintBottom_toBottomOf="parent"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorTextSecondary"
            android:gravity="start|center_vertical"
            android:textStyle="bold"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"

            tools:text="sample movie"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_voteaverage"
            android:layout_width="18dp"
            android:layout_height="18dp"

            app:layout_constraintLeft_toRightOf="@+id/imageview_movie_poster"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"

            app:srcCompat="@drawable/ic_star"
    />


</androidx.constraintlayout.widget.ConstraintLayout>